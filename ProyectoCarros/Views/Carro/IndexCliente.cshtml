@model IEnumerable<ProyectoCarros.Models.Carro>

@{
    ViewBag.Title = "IndexCliente";
    Layout = "~/Views/Shared/_LayoutCliente.cshtml";
}

<h2>Compremos un carro!</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Marca.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.modelo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.precio)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Marca.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.modelo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.precio)
        </td>
        <td>
            @Html.ActionLink("Comprar", "Comprar", new { id = item.id_Carro })   
        </td>
    </tr>
}

</table>
