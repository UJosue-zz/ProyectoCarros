@model ProyectoCarros.Models.Venta

@{
    ViewBag.Title = "Comprar";
    Layout = "~/Views/Shared/_LayoutCliente.cshtml";
}

<h2>Comprar</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Venta</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.id_Carro, "Carro", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @ViewBag.nombre_Carro
            </div>
        </div>

         <div class="form-group">
                @Html.LabelFor(model => model.id_Cliente, "Cliente", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10" hidden="hidden">
                    @Html.DropDownList("id_Cliente", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.id_Cliente, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-10">
                    @Session["username"]
                </div>
                </div>

        <div class="form-group">
            @Html.LabelFor(model => model.fecha_Venta, "Fecha de Compra", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" hidden="hidden">
                @Html.EditorFor(model => model.fecha_Venta, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.fecha_Venta, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-10">
                @DateTime.Now
            </div>
        </div>

        <div class="form-group">
            @ViewBag.precio
            <div class="col-md-10">
                
            </div>            
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Comprar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Cancelar", "IndexCliente")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
