@model IEnumerable<ProyectoCarros.Models.Marca>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Marcas</h2>

<p>
    @Html.ActionLink("Agregar nueva marca", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nota)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nota)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.id_Marca }) |
            @Html.ActionLink("Ver detalles", "Details", new { id=item.id_Marca }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.id_Marca })
        </td>
    </tr>
}

</table>
